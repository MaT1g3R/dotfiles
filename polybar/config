[module/filesystem]
type = internal/fs

; Mountpoints to display
mount-0 = /
mount-1 = /home
mount-2 = /run/media/umi/HDD

; Seconds to sleep between updates
; Default: 30
interval = 10

; Display fixed precision values
; Default: false
